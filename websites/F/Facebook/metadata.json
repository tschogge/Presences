{
  "$schema": "https://schemas.premid.app/metadata/1.13",
  "apiVersion": 1,
  "author": {
    "name": "Bas950",
    "id": "241278257335500811"
  },
  "contributors": [
    {
      "name": "Slowlife",
      "id": "374905512661221377"
    },
    {
      "name": "N0chteil ^^",
      "id": "495901098926669825"
    }
  ],
  "service": "Facebook",
  "description": {
    "en": "Connect with friends, family and other people you know. Share photos and videos, send messages and get updates.",
    "nl": "Maak contact met vrienden, familie en andere mensen die je kent. Deel foto's en video's, verzend berichten en ontvang updates.",
    "vi": "Kết nối với bạn bè, người thân và những người khác bạn biết. Chia sẻ hình ảnh và video, gửi tin nhắn và nhận các thông báo.",
    "zh": "与朋友、家人和其他你认识的人联系。分享照片和视频、发送消息和获取更新。"
  },
  "url": [
    "www.facebook.com",
    "web.facebook.com"
  ],
  "version": "3.8.1",
  "logo": "https://cdn.rcd.gg/PreMiD/websites/F/Facebook/assets/logo.png",
  "thumbnail": "https://cdn.rcd.gg/PreMiD/websites/F/Facebook/assets/thumbnail.jpg",
  "color": "#4267B2",
  "category": "socials",
  "tags": [
    "friends",
    "family"
  ],
  "settings": [
    {
      "icon": "fad fa-user-secret",
      "title": "Privacy Mode",
      "id": "privacyMode",
      "value": false
    },
    {
      "id": "cover",
      "title": "Show Cover",
      "icon": "fad fa-images",
      "value": false,
      "if": {
        "privacyMode": false
      }
    },
    {
      "icon": "fas fa-user",
      "title": "Show Username in Messenger",
      "id": "messagerUsername",
      "value": true,
      "if": {
        "privacyMode": false
      }
    },
    {
      "icon": "fas fa-search",
      "title": "Show Search Query",
      "id": "searchQuery",
      "value": true,
      "if": {
        "privacyMode": false
      }
    },
    {
      "icon": "fad fa-stopwatch",
      "title": "Show Timestamps",
      "id": "timestamp",
      "value": true,
      "if": {
        "privacyMode": false
      }
    },
    {
      "id": "buttons",
      "title": "Show Buttons",
      "icon": "fas fa-compress-arrows-alt",
      "value": true,
      "if": {
        "privacyMode": false
      }
    },
    {
      "id": "vidDetail",
      "if": {
        "privacyMode": false
      },
      "title": "Video Details row1",
      "icon": "fas fa-comment-alt-edit",
      "value": "%watching%: %title%",
      "placeholder": "Use %watching%, %title%, %onprofile%, %creator%"
    },
    {
      "id": "vidState",
      "if": {
        "privacyMode": false
      },
      "title": "Video Details row2",
      "icon": "fas fa-comment-alt-edit",
      "value": "%onprofile%: %creator%",
      "placeholder": "same like row1 or use {0} to delete the row completely"
    }
  ]
}
