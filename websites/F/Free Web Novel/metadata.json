{
	"$schema": "https://schemas.premid.app/metadata/1.12",
	"apiVersion": 1,
	"author": {
		"name": "BigBoi",
		"id": "853932304257908746"
	},
	"service": "Free Web Novel",
	"description": {
		"en": "We offer free novels to read online! Read novels updated daily: Chinese novels, English novels, Japanese novels, Korean novels, and novels of multiple genres."
	},
	"url": "freewebnovel.com",
	"version": "1.0.14",
	"logo": "https://cdn.rcd.gg/PreMiD/websites/F/Free%20Web%20Novel/assets/logo.png",
	"thumbnail": "https://cdn.rcd.gg/PreMiD/websites/F/Free%20Web%20Novel/assets/thumbnail.png",
	"color": "#5a5a5a",
	"category": "socials",
	"tags": [
		"novel",
		"book",
		"books",
		"reading",
		"free"
	],
	"settings": [
		{
			"id": "logoOnly",
			"title": "Logo Only",
			"if": {
				"privacy": false
			},
			"icon": "fa-solid fa-block-question",
			"value": false
		},
		{
			"id": "privacy",
			"title": "Privacy Mode",
			"if": {
				"showLogo": false
			},
			"icon": "fas fa-user-secret",
			"value": false
		},
		{
			"id": "showBook",
			"if": {
				"privacy": false,
				"showLogo": false,
				"showReading": true
			},
			"title": "Show Current Book",
			"icon": "fas fa-book",
			"value": true
		},
		{
			"id": "showCover",
			"if": {
				"privacy": false,
				"showLogo": false,
				"showBook": true,
				"showReading": true
			},
			"title": "Show Book Cover",
			"icon": "fas fa-images",
			"value": true
		},
		{
			"id": "showReading",
			"if": {
				"showLogo": false
			},
			"title": "Show Browsing/Reading Status",
			"icon": "fas fa-book-reader",
			"value": true
		},
		{
			"id": "showTimestamp",
			"title": "Show Timestamps",
			"icon": "fas fa-clock",
			"value": true
		},
		{
			"id": "showButtons",
			"if": {
				"privacy": false,
				"showLogo": false
			},
			"title": "Show Buttons",
			"icon": "fas fa-compress-arrows-alt",
			"value": true
		}
	]
}